<Window x:Class="TestWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="914">
    <Grid Background="#FFA9CCC8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" >
            <Label Content="测试账户" HorizontalAlignment="Left" Margin="27,11,0,0" VerticalAlignment="Top" Width="76"/>
            <Button x:Name="notify" Content="第一步：通知对方来查询和订阅" Height="43" Width="206" Click="Button_Click" Margin="73,44,121,348"/>
            <Button x:Name="push" Content="第二步：推送账户信息" Height="44" Width="206" Click="Button_Click" Margin="73,111,121,280"/>
            <Button x:Name="invoke" Content="同步Invoke示例" Height="44" Click="Button_Click" Margin="116,236,164,155"/>
            <Button x:Name="invokeAsync" Content="异步Invoke示例" Height="44" Click="Button_Click" Margin="116,304,164,87"/>
            <Label Content="Invoke测试（对方默认5秒返回）" HorizontalAlignment="Left" Margin="27,188,0,204" Width="209"/>
        </Grid>
        <Grid Grid.Column="1">
            <Button x:Name="requestThemeRes" Content="第一步：获取皮肤资源" VerticalAlignment="Top" Height="41" Click="Button_Click" Margin="127,48,94,0"/>
            <Button x:Name="requestTheme" Content="第二步：获取当前皮肤主题"  VerticalAlignment="Top" Height="40" Click="Button_Click" Margin="127,118,94,0"/>
            <Button x:Name="DemoButton" Content="效果展示按钮" VerticalAlignment="Top" Height="24" Width="115" Click="Button_Click" Margin="159,193,126,0"/>
            <Label Content="测试统一ui" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top"/>
            <Label Content="组件通信透传测试" HorizontalAlignment="Left" Margin="29,240,0,0" VerticalAlignment="Top" Width="126"/>
            <Label Content="发送内容" HorizontalAlignment="Left" Margin="29,303,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="edit_content" HorizontalAlignment="Left" Margin="88,307,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="76"/>
            <Label Content="组名" HorizontalAlignment="Left" Margin="168,303,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="edit_group" HorizontalAlignment="Left" Margin="202,307,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="76"/>
            <ComboBox x:Name="comType" HorizontalAlignment="Left" Margin="280,305,0,0" VerticalAlignment="Top" Width="57" SelectedIndex="0">
                <ComboBoxItem Content="请求"/>
                <ComboBoxItem Content="推送"/>
            </ComboBox>
            <Button Content="全局发送" HorizontalAlignment="Left" Margin="340,306,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
            <Button Content="组发送" HorizontalAlignment="Left" Margin="396,306,0,0" VerticalAlignment="Top" Click="Button_Click_2" Width="51"/>
        </Grid>
    </Grid>
</Window>
